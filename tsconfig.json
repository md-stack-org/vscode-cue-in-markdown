    "module": "commonjs",
    "target": "es2018",
    "outDir": "out",
    "lib": ["es2018"],
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "**/*.ts"
  ],
